<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="hora"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="48dp"
        android:id="@+id/hora_medicamento_texto"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_height="48dp" />

    <TextView
        android:text="medicamento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:id="@+id/medicamento_medicamento_texto"
        app:layout_constraintTop_toTopOf="@+id/hora_medicamento_texto"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/hora_medicamento_texto"
        android:layout_marginLeft="8dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toLeftOf="@+id/dosis_medicamento_texto"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="dosis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="48dp"
        android:id="@+id/dosis_medicamento_texto"
        app:layout_constraintTop_toTopOf="@+id/medicamento_medicamento_texto"
        android:layout_height="48dp"
        app:layout_constraintRight_toLeftOf="@+id/boton_asignar_medicamento"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="Asignar"
        android:layout_width="wrap_content"
        android:id="@+id/boton_asignar_medicamento"
        app:layout_constraintTop_toTopOf="@+id/dosis_medicamento_texto"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_height="48dp" />
</android.support.constraint.ConstraintLayout>
