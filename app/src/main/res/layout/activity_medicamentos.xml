<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medicamentos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="husi.recuperapp.medicamentos.Medicamentos">

    <TextView
        android:text="@string/medicamento_intrucciones"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@color/rojoClaro"
        android:textColor="@color/blanco"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMedicamentos"
        app:layout_constraintRight_toRightOf="@+id/listViewMedicamentos"
        app:layout_constraintLeft_toLeftOf="@+id/listViewMedicamentos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/medicamentos_evitar"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/grisOscuro"
        android:textColor="@color/blanco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/medicamentos_evitar_medicamento"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedicamentos"
        android:layout_marginTop="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <ListView
        android:id="@+id/listViewMedicamentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/medicamentos_evitar_medicamento" />

</android.support.constraint.ConstraintLayout>
