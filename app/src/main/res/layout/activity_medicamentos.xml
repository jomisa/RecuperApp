<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medicamentos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="husi.recuperapp.Medicamentos">

    <ListView
        android:id="@+id/listViewMedicamentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"
        tools:layout_editor_absoluteY="41dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="Hora"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hora_titulo_medicamento"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Nombre"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_titulo_medicamento"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/hora_titulo_medicamento"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/hora_titulo_medicamento" />



    <TextView
        android:text="Dosis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dosis_titulo_medicamento"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/nombre_titulo_medicamento"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/nombre_titulo_medicamento" />

    <TextView
        android:text="Frecuencia"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frecuencia_titulo_medicamento"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/dosis_titulo_medicamento"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/dosis_titulo_medicamento"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.41" />

</android.support.constraint.ConstraintLayout>
