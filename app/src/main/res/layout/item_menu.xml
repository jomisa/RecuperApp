<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_constraintLayout">

    <ImageView
        android:id="@+id/icono_funcionalidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_height="120dp"
        android:layout_width="120dp" />

    <TextView
        android:id="@+id/funcionalidad_texto"
        android:layout_width="0dp"
        android:text="@string/funcionalidad"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/rojoClaro"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/icono_funcionalidad"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/icono_funcionalidad" />

    <TextView
        android:id="@+id/descripcion_texto"
        android:layout_width="0dp"
        android:layout_alignParentRight="true"
        android:text="@string/descripcion"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/grisOscuro"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/icono_funcionalidad"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/funcionalidad_texto"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/degradado"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
