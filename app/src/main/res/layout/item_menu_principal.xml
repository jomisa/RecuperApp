<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icono_funcionalidad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.05" />

    <TextView
        android:id="@+id/funcionalidad_texto"
        android:layout_width="0dp"
        android:text="@string/funcionalidad"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#f44336"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.12"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/icono_funcionalidad"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/icono_funcionalidad"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/descripcion_texto"
        android:layout_width="0dp"
        android:layout_alignParentRight="true"
        android:text="@string/descripcion"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#616161"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/icono_funcionalidad"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/funcionalidad_texto"
        android:layout_height="60dp" />


</android.support.constraint.ConstraintLayout>
