<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/degradado"
        android:layout_height="13dp"
        android:id="@+id/degradado_animo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/animo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/rojoClaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animo_texto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degradado_animo" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_animo"
        app:layout_constraintTop_toBottomOf="@+id/animo_texto"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintRight_toLeftOf="@+id/imageView2" />

    <Button
        android:text="@string/ingresar"
        android:background="@drawable/estilo_boton_rojo"
        android:textColor="#fafafa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boton_ingresar_animo"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_animo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ratingBar_animo"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar_animo"
        app:srcCompat="@drawable/ic_emoticon_with_happy_face"
        android:tint="@color/negro"
        android:layout_width="50dp"
        app:layout_constraintVertical_bias="0.42000002"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ratingBar_animo"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar_animo"
        app:srcCompat="@drawable/ic_emoticon_dead"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>


</android.support.constraint.ConstraintLayout>
